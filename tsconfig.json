{
  "compilerOptions": {
    "target": "es2020",
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "module": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "build"
  },
  "include": [
    "./src/**/*.ts"
  ]
}